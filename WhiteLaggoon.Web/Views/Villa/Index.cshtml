@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="w-100 card border-0 p-4" > 
    <h1> Villa List </h1>
    <a asp-controller="Villa" asp-action="Create"> 
    
        <i> Create New Villa </i>
        
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Sqft
            </th>
            <th>
                Occupancy
            </th>
            <th>
                Image
            </th>
            <th>
                
            </th>
            <th>
                
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td> @obj.Name </td>
                <td> @obj.Price </td>
                <td> @obj.Sqft </td>
                <td> @obj.Occupancy </td>
                <td> @obj.ImageUrl </td>
                <td> <img src="@Url.Content(obj.ImageUrl)" style="width:50px;height:50px" alt="" /> </td>
                <td> 
                     <div class="w-75 btn-group" role="group">
                         
                         <a asp-controller="Villa" asp-action="Update" asp-route-villaId="@obj.Id" class="btn btn-secondary">
                             <i class="bg-info bi-pencil-square"></i> Edit
                         </a>

                        <a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id" class="btn btn-danger">
                            <i class="bg-info bi-trash-fill"></i> Delete
                        </a>

                     </div>
                </td>
            </tr>
        }
    </tbody>
</table>