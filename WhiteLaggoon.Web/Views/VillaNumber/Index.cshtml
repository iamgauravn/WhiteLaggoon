@model IEnumerable<WhiteLagoon.Domain.Entities.VillaNumber>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="w-100 card border-0 p-4">
    <h1> Villa Number List </h1>
    <a asp-controller="VillaNumber" asp-action="Create">

        <i> Create New Villa Number </i>

    </a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>
                Name
            </th>
            <th>
                Villa Number
            </th>
            <th>
                Special Details
            </th>
            <th>

            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td> @obj.Villa.Name </td>
                <td> @obj.Villa_Number </td>
                <td> @obj.SpecialDetails </td>
                <td>
                    <div class="w-75 btn-group" role="group">

                        <a asp-controller="VillaNumber" asp-action="UpdateNumber" asp-route-villaNumberId="@obj.VillaId" class="btn btn-secondary">
                            <i class="bg-info bi-pencil-square"></i> Edit
                        </a>

                        <a asp-controller="VillaNumber" asp-action="DeleteNumber" asp-route-villaNumberId="@obj.VillaId" class="btn btn-danger">
                            <i class="bg-info bi-trash-fill"></i> Delete
                        </a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>